{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./app",
    "paths": {
      "@api/*": ["api/*"],
      "@assets/*": ["assets/*"],
      "@components": ["components/index"],
      "@navigation/*": ["navigation/*"],
      "@locales/*": ["locales/*"],
      "@screens": ["screens/index"],
      "@store/*": ["store/*"],
      "@utils/*": ["utils/*"],
      "@constants": ["constants/index"],
      "@hooks": ["hooks/index"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
